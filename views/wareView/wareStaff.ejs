<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin panel</title>
    <link rel="stylesheet" href="/nguyen/ware.css">

</head>

<body>
    <div class="container">

        <!-- navigation -->
        <div class="navigation">
            <ul>
                <li>
                    <a href="">
                        <span class="icon"><ion-icon name="logo-apple"></ion-icon></span>
                        <span class="title">Brand name</span>
                    </a>
                </li>
                <li class="active">
                    <a href="">
                        <span class="icon"><ion-icon name="home-outline"></ion-icon></span>
                        <span class="title">Dashboard</span>
                    </a>
                </li>
                <li>
                    <a href="">
                        <span class="icon"><ion-icon name="person-outline"></ion-icon></span>
                        <span class="title">Customer</span>
                    </a>
                </li>
                <li>
                    <a href="">
                        <span class="icon"><ion-icon name="chatbubble-outline"></ion-icon></span>
                        <span class="title">Message</span>
                    </a>
                </li>
                <li>
                    <a href="">
                        <span class="icon"><ion-icon name="help-outline"></ion-icon></span>
                        <span class="title">Help</span>
                    </a>
                </li>
                <li>
                    <a href="">
                        <span class="icon"><ion-icon name="settings-outline"></ion-icon></span>
                        <span class="title">Settings</span>
                    </a>
                </li>
                <li>
                    <a href="">
                        <span class="icon"><ion-icon name="lock-closed-outline"></ion-icon></span>
                        <span class="title">Password</span>
                    </a>
                </li>
                <li>
                    <a href="">
                        <span class="icon"><ion-icon name="log-out-outline"></ion-icon></span>
                        <span class="title">Sign out</span>
                    </a>
                </li>
            </ul>
        </div>

        <!-- main -->
        <div class="main">
            <!-- topbar -->
            <div class="topbar">
                <div class="toggle">
                    <ion-icon name="menu-outline"></ion-icon>
                </div>
                <!-- search -->
                <div class="search">
                    <label>
                        <input type="text" placeholder="Search here">
                        <ion-icon name="search-outline"></ion-icon>
                    </label>
                </div>
                <!-- user image -->
                <div class="user">
                    <img src="../../public/truong/img/user.jpg" alt="User">

                </div>
            </div>


            <div class="container details">

                <div class="products-container">
                    <% var i = 0; %>
                        <% data.products.forEach(function(product){ %>
                            <div class="product" data-name="p-1">
                                <img src="<%= product.good_img %>" alt="" class="pimg" height="200px">
                                <div style="display: block; font-size: 0.8rem;">

                                    <h2 style="padding-top: 7px;" hidden>
                                        <span class="pid"><%= product.id %></span>
                                    </h2>
                                    <h2 style="padding-top: 7px;">
                                        <span class="pname"><%= product.name %></span>
                                    </h2>
                                    <h2 style="padding-top: 7px; color: red">
                                        <span class="pprice"><%= product.sellPrice %></span>
                                    </h2>
                                    <h2 style="padding-top: 7px; color: red; display: none">
                                        <span class="pposition"><%= product.position %></span>
                                    </h2>
                                    <h2 style="padding-top: 7px;">Số lượng: <span style="color: green;" class="pamount"><%= product.amount %></span> </h2>
                                </div>


                                <div class="buttons">
                                    <a href="/ware/deleteproduct/<%=i%>" class="delete">delete</a>
                                    <a href="#" class="edit" onclick="updateproduct(<%=i%>)">edit</a>
                                </div>
                            </div>
                            <%i = i +1; %>
                                <%}) %>
                </div>
                <div style="overflow: scroll; position:fixed">
                    <div class="recentCustomers">
                        <div class="cardHeader">
                            <h2>Cập nhật sản phẩm </h2>
                        </div>
                        <img id="product-img" src="https://inboundmarketing.vn/wp-content/uploads/2020/06/khai-niem-ve-san-pham-product-va-nhung-cach-phan-loai-chung.jpg" alt="">
                        <div class="form-product">
                            <form action="/ware/updateproduct" method="GET">
                                <input type="text" id="productid" name="productid" placeholder="Your " value="" hidden>
                                <label for="tensp">Tên SP </label>
                                <input type="text" id="tensp" name="tensp" placeholder="Your " value="">
                                <br>
                                <label for="amount">Số lượng</label>
                                <input type="number" id="amount" name="amount" placeholder="Your">
                                <br>
                                <label for="position">Vị trí</label>
                                <input type="number" id="position" name="position" placeholder="Your">
                                <br>
                                <label for="price">Giá</label>
                                <input type="number" id="price" name="price" placeholder="Your">
                                <br>
                                <input type="submit" value="Submit">
                            </form>
                        </div>
                    </div>

                    <div class="recentCustomers" style="bottom: 21%;">
                        <div class="cardHeader">
                            <h2 style="color: green;">Thêm sản phẩm mới </h2>
                        </div>
                        <div class="form-product">
                            <form action="/ware/addproduct" method="GET">
                                <label for="addimg">Link hình ảnh </label>
                                <input type="text" id="addimg" name="image" placeholder="Product link.." style="right: 0;">
                                <label for="addname">Tên SP </label>
                                <input type="text" id="addname" name="addname" placeholder="Product name">
                                <br>
                                <label for="addamount">Số lượng</label>
                                <input type="text" id="addamount" name="addamount" placeholder="Product">
                                <br>
                                <label for="addpos">Vị trí</label>
                                <input type="text" id="addpos" name="addpos" placeholder="Product">
                                <br>
                                <label for="addprice">Giá</label>
                                <input type="text" id="addprice" name="addprice" placeholder="Product">
                                <br>
                                <input type="submit" value="Submit">
                            </form>
                        </div>
                    </div>
                    <div class="recentCustomers nhaphang" style="bottom: 10px;margin-top:5px; height:150px">
                        <div class="cardHeader">
                            <h2 style="color: green;">Nhập hàng </h2>
                        </div>
                        <!-- <img src="https://upload.wikimedia.org/wikipedia/commons/8/88/Bright_red_tomato_and_cross_section02.jpg" alt=""> -->
                        <div class="form-product">
                            <form action="/ware/importproduct" method="GET">
                                <label for="imid">ID SP </label>
                                <input type="text" id="imid" name="imid" placeholder="Your ">
                                <br>
                                <label for="imamount">Số lượng</label>
                                <input type="number" id="iamount" name="imamount" placeholder="Your">
                                <input type="submit" value="Submit">
                            </form>
                        </div>
                    </div>
                </div>

            </div>

        </div>




    </div>
    </div>

    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>

    <script>
        //menu toggle
        let toggle = document.querySelector('.toggle');
        let main = document.querySelector('.main');
        let navigation = document.querySelector('.navigation');

        toggle.onclick = function() {
            navigation.classList.toggle('active');
            main.classList.toggle('active');
        }

        //add hovered class for selected list item
        let list = document.querySelectorAll('.navigation li');

        function hoveredLink() {
            this.classList.add('hovered');
        }

        function unhoveredLink() {
            this.classList.remove('hovered')
        }
        list.forEach((item) => {
            item.addEventListener('mouseover', hoveredLink);
            item.addEventListener('mouseleave', unhoveredLink);
        });
        var productImg = document.getElementById("product-img");
        var product = document.getElementsByClassName("product");

        function updateproduct(i) {
            productImg.src = document.getElementsByClassName("pimg")[i].src;
            document.getElementById("productid").value = document.getElementsByClassName("pid")[i].innerHTML;
            document.getElementById("tensp").value = document.getElementsByClassName("pname")[i].innerHTML;
            document.getElementById("amount").value = document.getElementsByClassName("pamount")[i].innerHTML;
            document.getElementById("position").value = document.getElementsByClassName("pposition")[i].innerHTML;
            document.getElementById("price").value = document.getElementsByClassName("pprice")[i].innerHTML;
        }
    </script>

    <script src="js/script.js" defer></script>
</body>

</html>